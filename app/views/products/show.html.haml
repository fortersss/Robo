.container-fluid
  .col-md-5
    %h1
      = @product.name
    %p.lead
      = @product.description
      = simple_format(@product.long_description)
    %p.lead
      = number_to_currency(@product.price)
    %p
      = link_to "#", class: "btn btn-primary" do
        %span.fa.fa-shopping-card Dodaj do koszyka
  .col-md-7
    = image_tag @product.photo.url(:details), class: "img-responsive"